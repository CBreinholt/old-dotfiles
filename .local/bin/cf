#!/bin/bash
#
# Quickly access commonly edited config files in ~/.config

if [ $# != 1 ]; then echo "Invalid args!"; exit; fi

case "$1" in
	"i3")
		dir="$HOME/.config/i3/config";;
	"vim")
		dir="$HOME/.config/nvim/init.vim";;
	"bash")
		dir="$HOME/.config/bash/bashrc";;
	"xres")
		dir="$HOME/.config/Xresources";;
	"xinit")
		dir="$HOME/.xinitrc";;
	"profile")
		dir="$HOME/.profile";;
	*)
		exit;;
esac

nvim "$dir"
