#!/bin/bash
#
# bspwm_conf_desktops --- Configure monitor settings for BSPWM.

# Set the workspaces per monitor. One per monitor so we have dynamic desktops.
# Borders on, otherwise it's impossible to find the focused window
if [ "$(bspc query -M | wc -l)" -eq 2 ]; then
	bspc monitor "HDMI2" -d 0
	bspc monitor "eDP1" -d 1
    bspc config borderless_monocle false
else
	bspc monitor -d 1
fi

