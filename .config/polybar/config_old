; vim:ft=dosini
[global-wm]
include-file = $HOME/.config/polybar/colors
include-file = $HOME/.config/polybar/modules
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 3%
fixed-center = true

padding-left = 1
padding-right = 1
module-margin = 2
radius = 0.0
line-size = 2

cursor-click = pointer
cursor-scroll = ns-resize

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = SauceCodePro Nerd Font:pixelsize=12;3
font-1 = SauceCodePro Nerd Font Mono:pixelsize=18;4

tray-position = right
tray-padding = 2

override-redirect = false
wm-restack = bspwm


[bar/main]
inherit = bar/base
monitor = ${env:MONITOR:eDP1}
dpi = ${xrdb:Xft.dpi:-1}
modules-left = bspwm
modules-center = title
modules-right = alsa backlight battery date


[bar/dual]
inherit = bar/base
monitor = ${env:MONITOR:HDMI2}
dpi = ${xrdb:Xft.dpi:-1}
modules-left = bspwm
modules-center = title
modules-right = date
